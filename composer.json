  "keywords": [
    "slim",
    "framework",
    "view",
    "template",
    "blade",
    "renderer"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Hiroaki Matsuura",
      "email": "lib2jp@gmail.com"
    }
  ],
  "require": {
    "jenssegers/blade": "^1.4",
    "ramsey/uuid": "^4.1.1",
    "psr/http-message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Slim\\Views\\": "src"
    }
  },
  "require-dev": {
